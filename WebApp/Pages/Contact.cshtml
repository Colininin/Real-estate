@page
@model WebApp.Pages.ContactModel
@{

    if (@Model.loggedin == true)
    {
        Layout = "Shared/_LayoutLoggedin.cshtml";
    }
    else
    {
        Layout = "Shared/_Layout.cshtml";
    }
}

<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1">Contact</h1>
            <p class="lead">Please don't hesitate to contact us with al your questions!</p>
        </div>
        <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
            <img class="rounded-lg-3" src="images/countrySideHoues.jpg" alt="" width="720">
        </div>
    </div>
</div>